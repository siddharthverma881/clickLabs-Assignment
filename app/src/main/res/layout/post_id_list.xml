<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SingleViewParent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        style="@style/cardView"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#D1F2EB">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pidl_tv_user"
                style="@style/PostIdTextView"
                android:text="@string/tv_user_id"/>

            <TextView
                android:id="@+id/pidl_tv_id"
                android:layout_below="@id/pidl_tv_user"
                style="@style/PostIdTextView"
                android:text="@string/tv_id"/>

            <TextView
                android:id="@+id/pidl_tv_title"
                android:layout_below="@id/pidl_tv_id"
                style="@style/PostIdTextView"
                android:text="@string/tv_title"/>

            <TextView
                android:id="@+id/pidl_tv_body"
                android:layout_below="@id/pidl_tv_title"
                style="@style/PostIdTextView"
                android:text="@string/tv_body"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>