<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StudentListFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/studentList_btn_add"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fragment_tv_nodatafound"
        style="@style/TextView"
        android:text="@string/student_tv_nodata"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/studentList_btn_add"
        style="@style/PrimaryButton"
        android:text="@string/student_btn"
        />

    </RelativeLayout>

</FrameLayout>