<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SingleViewParent">

    <android.support.v7.widget.CardView
        style="@style/cardView"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#D1F2EB">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boy"
                android:layout_margin="@dimen/view_iv_margin"
                />

            <TextView
                android:id="@+id/view_list_id"
                style="@style/ViewListTextView"
                android:text="@string/view_list_id"/>

            <TextView
                android:id="@+id/view_list_username"
                android:layout_below="@id/view_list_id"
                style="@style/ViewListTextView"
                android:text="@string/view_list_username"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
