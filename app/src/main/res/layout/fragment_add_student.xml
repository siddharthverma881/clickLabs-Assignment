<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddStudentFragment">

    <RelativeLayout
        style="@style/ParentLayout"
        android:layout_margin="@dimen/add_student_layout_margin">

        <EditText
            android:id="@+id/et_roll"
            style="@style/AddStudentEt"
            android:layout_centerInParent="true"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:hint="@string/add_student_hint_roll"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_above="@id/et_roll"
            style="@style/AddStudentEt"
            android:singleLine="true"
            android:hint="@string/add_student_hint_name"/>
        <EditText
            android:id="@+id/et_class"
            android:layout_below="@id/et_roll"
            android:imeOptions="actionGo"
            style="@style/AddStudentEt"
            android:hint="@string/add_student_hint_class"/>

        <Button
            android:id="@+id/addStudent_btn_add"
            style="@style/PrimaryButton"
            android:layout_alignParentBottom="true"
            android:text="@string/add_student_btn_add"
            />

    </RelativeLayout>

</FrameLayout>