<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ViewStudent"
    android:id="@+id/view_student_linear_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/ViewStudent"
        android:text="@string/add_student_hint_name"
        android:textSize="@dimen/view_student_tv"/>
    <TextView
        android:id="@+id/tv_roll"
        style="@style/ViewStudent"
        android:text="@string/add_student_hint_roll"
        android:textSize="@dimen/view_student_tv"/>
    <TextView
        android:id="@+id/tv_class"
        style="@style/ViewStudent"
        android:text="@string/add_student_hint_class"
        android:textSize="@dimen/view_student_tv"/>

</LinearLayout>